\newcommand{\secondi}[1]{
	\ifcase #1\printnumeroinparole{#1}\space\DTMitsecondsstring%
	\or
	\DTMitonesecondstring\space\DTMitsecondstring%
	\else
	\printnumeroinparole{#1}\space\DTMitsecondsstring%
	\fi}
