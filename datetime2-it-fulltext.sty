\DTMnewtimestyle{it-fulltext}{%
  \renewcommand\DTMdisplaytime[3]{%
   \ifboolexpr
   {test {\ifnumequal{##2}{0}} and
    (test {\ifnumequal{##1}{0}}
      or test {\ifnumequal{##1}{12}}
      or test {\ifnumequal{##1}{24}}
    )
   }%
   {%
     \ifnum##1=12
       \DTMitaliannoon 
     \else
       \DTMitalianmidnight
     \fi
   }%
   {%
     \ifnum##2=0
      \ifnum##1=1 una \DTMoclockstring\else \protect\numberstringnum{##1} \DTMoclockstring\fi
     \else
       \ifnum##2<31
         \ifnum##2=15
           \DTMquarterpaststring\space
         \else
           \ifnum##2=30
             \DTMhalfpaststring\space
           \else
           \ifnum##2=1 un\space\else \protect\numberstringnum{##2}\space\fi
             \ifnum##2=1 
             \ifboolexpr{ test {\ifnumcomp{##1}{=}{12}} or test {\ifnumcomp{##1}{=}{0}} }
             {\DTMminutepaststringTWO}
             {\DTMminutepaststringONE}
             \else
             \ifboolexpr{ test {\ifnumcomp{##1}{=}{12}} or test {\ifnumcomp{##1}{=}{0}} }
             {\DTMminuteitaliannoonspaststring}
             {\DTMminutespaststringONE}
             \fi
             \space
           \fi
         \fi
         \ifnum##1>12
           \ifnum##1=24
             \DTMitalianmidnight
           \else
             \protect\numberstringnum{\numexpr##1-12}%
            \fi
         \else
           \ifnum##1=0
             \DTMitalianmidnight
           \else
           \ifnum##1=1 una\else \ifnum##1=12 \DTMitaliannoon\else\protect\numberstringnum{##1}\fi\fi%
           \fi
         \fi
       \else
         \ifnum##2=45
           \DTMquartertostring\space
         \else
           \ifnum##2=59 un \else \protect\numberstringnum{\numexpr60-##2}\fi
           \ifnum##2=59  \DTMminutetostring\else\space\DTMminutestostring\fi
           \space
         \fi
         \ifnum##1>12
           \ifnum##1=24
            \protect\numberstringnum{1}%
           \else
            \ifnum##1=23
              \DTMitalianmidnight
            \else
              \protect\numberstringnum{\numexpr##1-11}%
            \fi
           \fi
         \else
           \ifnum##1=12 una
            %\protect\numberstringnum{1}%
           \else
            \ifnum##1=0 una\else \protect\numberstringnum{\numexpr##1+1}\fi%
           \fi
         \fi
       \fi
     \fi
     \ifnum##1>11
       \ifnum##1=23
         \ifnum##2<31
           \space\DTMafternoonstring
         \fi
       \else
         \ifnum##1=24
           \ifnum##2>30
            \space\DTMmorningstring
           \fi
         \else
          \ifnum##1=12 \else\space\DTMafternoonstring\fi
         \fi
       \fi
     \else
       \ifnum##1>0
         \space\DTMmorningstring
       \else
         \ifnum##2>30
           \space\DTMmorningstring
         \fi
       \fi
     \fi
   }%
  }%
}


